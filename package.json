{
  "name": "@typhonjs-plugin/eventbus",
  "description": "Provides a flexible in process eventbus.",
  "version": "0.0.2",
  "author": "Michael Leahy <support@typhonjs.io> (https://github.com/typhonrt)",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "browser": "dist/browser/Eventbus.js",
  "contributors": [
    "Michael Leahy <support@typhonjs.io> (https://github.com/typhonrt)"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@typhonjs-utils/build-test": "^0.1.0",
    "@typhonjs-utils/build-test-browser": "^0.0.6",
    "rollup": "^2",
    "rollup-plugin-dts": "^3.0.0",
    "rollup-plugin-istanbul": "^3.0.0",
    "rollup-plugin-terser": "^7"
  },
  "engines": {
    "node": ">=12"
  },
  "types": "./types/index.d.ts",
  "files": [
    "/npm-shrinkwrap.json",
    "/dist",
    "/src",
    "/types"
  ],
  "homepage": "https://github.com/typhonjs-plugin/eventbus",
  "keywords": [
    "typhonjs",
    "plugin",
    "eventbus"
  ],
  "license": "MPL-2.0",
  "repository": "github:typhonjs-plugin/eventbus",
  "bugs": "https://github.com/typhonjs-plugin/eventbus/issues",
  "scripts": {
    "bundle": "rollup --config",
    "bundle-browser": "rollup --config rollup.config.browser.js",
    "eslint": "eslint .",
    "posttest-browser": "nyc report --exclude-after-remap=true --reporter=lcov --reporter=text-summary --report-dir=coverage-browser",
    "pretest-browser": "npm run bundle-browser",
    "prepublishOnly": "npm run bundle && npm run test-node && npm run test-browser",
    "test-browser": "node ./test/src/browser/run.js",
    "test-node": "c8 --exclude-after-remap=true --reporter=lcov --reporter=text-summary mocha -colors \"test/src/node/**/*.test.js\" --timeout 16000",
    "types": "npx -p typescript tsc ./src/typedef.js ./src/index.js --declaration --allowJs --emitDeclarationOnly --target ES2020 --outDir ./lib && rollup --config rollup.config.types.js"
  }
}
